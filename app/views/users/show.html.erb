<div class="card">

  <div class="card-body">
    <strong>ID:</strong>
    <%= link_to @user.id, user_path(@user) %>
    <br/>
  
    <strong>Email:</strong>
    <%= @user.email %>
        
    <br/>
    
    <strong>Confirmation:</strong>
    <%= boolean_label(@user.confirmed?) %>
    <br/>
    
    <% if @user.sign_in_count? %>
        <b><%= 'sign_in_count'.humanize %>:</b>
        <%= @user.sign_in_count %>
        <br/>
        <b><%= 'current_sign_in_at'.humanize %>:</b>
        <%= @user.current_sign_in_at %>
        <br/>
        <b><%= 'last_sign_in_at'.humanize %>:</b>
        <%= @user.last_sign_in_at %>
        <br/>
        <b><%= 'current_sign_in_ip'.humanize %>:</b>
        <%= @user.current_sign_in_ip %>
        <br/>
        <b><%= 'last_sign_in_ip'.humanize %>:</b>
        <%= @user.last_sign_in_ip %>
        <br/>
        <b><%= 'locked_at'.humanize %>:</b>
        <%= @user.locked_at %>
        <br/>
        <b><%= 'provider'.humanize %>:</b>
        <%= @user.provider %>
        <br/>
        <b><%= 'uid'.humanize %>:</b>
        <%= @user.uid %>
        <br/>
        <b><%= 'name'.humanize %>:</b>
        <%= @user.name %>
        <br/>
        <b><%= 'roles'.humanize %>:</b>
        <%= @user.active_roles.join(",") %>
    <% end %>
    <br/>
    <% if current_user.admin? %>
      <%= link_to "Edit roles", edit_user_path(@user), class: "btn btn-sm btn-warning" %>
      <%= link_to ban_status(@user), ban_user_path(@user), class: "btn btn-sm btn-primary", method: :patch %>
      <%= link_to "Delete", @user, method: :delete, data: {confirm: "Are you sure"}, class: "btn btn-sm btn-danger" %>
    <% end %>
  

  </div>
  <div class="card-footer">
    <%= link_to "All Users", users_path %>
  </div>
  
</div>
 